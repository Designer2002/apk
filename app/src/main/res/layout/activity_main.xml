<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/khaki_dark_bg">
    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-180dp"
        android:layout_marginEnd="-130dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/khaki_error_box"
        android:textColor="@color/khaki_text_primary"
        android:textSize="14sp"
        android:padding="12dp"
        android:visibility="gone"
        android:rotation="-90"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="0dp"
        android:gravity="center_vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-380dp"
    android:layout_gravity="center">
    <ImageButton
        android:id="@+id/gps_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/khaki_button"
        android:background="@drawable/square_button_bg"
        android:src="@drawable/gps"
        android:contentDescription="@string/desc_button_icon"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:layout_margin="8dp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="-50dp"
            android:padding="1dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/x"
                android:layout_weight="1"
                android:autofillHints="11.22.33"
                android:hint="@string/x_coord"
                android:backgroundTint="@color/khaki_secondary"
                android:textColor="@color/khaki_text_primary"
                android:textColorHint="@color/khaki_text_secondary"
                android:padding="1dp"
                android:layout_marginEnd="1dp"
                android:layoutDirection="ltr"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:rotation="-90"
                android:gravity="fill_vertical"/>
            <TextView
                android:id="@+id/y"
                android:layout_weight="1"
                android:autofillHints="11.22.33"
                android:hint="@string/y_coord"
                android:backgroundTint="@color/khaki_secondary"
                android:textColor="@color/khaki_text_primary"
                android:textColorHint="@color/khaki_text_secondary"
                android:padding="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="170dp"
                android:layoutDirection="ltr"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:rotation="-90"
                android:gravity="fill_vertical"/>

            <EditText
                android:id="@+id/edit_var"
                android:layout_width="wrap_content"
                android:layout_height="590dp"
                android:layout_marginBottom="150dp"
                android:layout_weight="1"
                android:autofillHints="1234"
                android:background="@color/khaki_input"
                android:gravity="fill_vertical"
                android:hint="@string/variable"
                android:inputType="numberDecimal"
                android:layoutDirection="ltr"
                android:padding="10dp"
                android:rotation="-90"
                android:textColor="@color/khaki_text_primary"
                android:textColorHint="@color/khaki_text_secondary" />
        </LinearLayout>

        <Button
            android:id="@+id/calx_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="-70dp"
            android:rotation="-90"
            android:backgroundTint="@color/khaki_secondary"
            android:text="@string/calculate"
            android:textColor="@color/khaki_text_primary"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="4dp"
            android:minHeight="0dp"
            android:minWidth="0dp" />
        <TableLayout
            android:layout_marginStart="-200dp"
            android:rotation="-90"
            android:id="@+id/khaki_table"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4,5,6"
            android:background="@color/khaki_dark_bg"
            android:padding="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- Header Row -->
            <TableRow
                android:background="@color/khaki_primary">

                <!-- Empty corner cell -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="8dp" />

                <!-- Column labels -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/table_priznak"
                    android:textColor="@color/khaki_text_primary"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:text="@string/tablebdu10"
                    android:textColor="@color/khaki_text_primary"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:text="@string/tablebdu1"
                    android:textColor="@color/khaki_text_primary"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:text="@string/tablebdu10"
                    android:textColor="@color/khaki_text_primary"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:text="@string/tablebdu1"
                    android:textColor="@color/khaki_text_primary"
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:text="@string/table3"
                    android:textColor="@color/khaki_text_primary"
                    android:padding="8dp"
                    android:gravity="center" />
            </TableRow>

            <!-- Row 1 -->
            <TableRow android:background="@color/khaki_button">

                <TextView
                    android:text="@string/tableX"
                    android:textColor="@color/khaki_text_secondary"
                    android:padding="8dp" />

                <TextView android:id="@+id/f00" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f01" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f02" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f03" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f04" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f05" android:text="-" style="@style/TableCell" />
            </TableRow>

            <!-- Row 2 -->
            <TableRow android:background="@color/khaki_secondary">

                <TextView
                    android:text="@string/tableY"
                    android:textColor="@color/khaki_text_secondary"
                    android:padding="8dp" />

                <TextView android:id="@+id/f10" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f11" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f12" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f13" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f14" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f15" android:text="-" style="@style/TableCell" />
            </TableRow>

            <!-- Row 3 -->
            <TableRow android:background="@color/khaki_button_pressed">

                <TextView
                    android:text="@string/tableVar"
                    android:textColor="@color/khaki_text_secondary"
                    android:padding="8dp" />

                <TextView android:id="@+id/f20" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f21" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f22" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f23" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f24" android:text="-" style="@style/TableCell" />
                <TextView android:id="@+id/f25" android:text="-" style="@style/TableCell" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</FrameLayout>
