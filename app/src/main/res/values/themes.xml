<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Khaki Dark Theme -->
    <style name="Theme.KhakiDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryKhaki</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantKhaki</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryKhaki</item>

        <item name="colorSecondary">@color/colorSecondaryKhaki</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryKhaki</item>

        <item name="android:windowBackground">@color/backgroundKhaki</item>

        <item name="colorSurface">@color/backgroundKhaki</item>
        <item name="colorOnSurface">@color/textPrimaryKhaki</item>

        <item name="buttonStyle">@style/KhakiButton</item>

        <item name="android:textColorPrimary">@color/textPrimaryKhaki</item>
        <item name="android:textColorSecondary">@color/textSecondaryKhaki</item>

        <item name="textInputStyle">@style/KhakiTextInput</item>
    </style>

    <!-- Khaki Yellow Theme -->
    <style name="Theme.KhakiYellow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryYellow</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantYellow</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryYellow</item>

        <item name="colorSecondary">@color/colorSecondaryYellow</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryYellow</item>

        <item name="android:windowBackground">@color/backgroundYellow</item>
        <item name="colorSurface">@color/backgroundYellow</item>
        <item name="colorOnSurface">@color/textPrimaryYellow</item>

        <item name="android:textColorPrimary">@color/textPrimaryYellow</item>
        <item name="android:textColorSecondary">@color/textSecondaryYellow</item>
    </style>

    <!-- Khaki Blue Theme -->
    <style name="Theme.KhakiBlue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantBlue</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryBlue</item>

        <item name="colorSecondary">@color/colorSecondaryBlue</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryBlue</item>

        <item name="android:windowBackground">@color/backgroundBlue</item>
        <item name="colorSurface">@color/backgroundBlue</item>
        <item name="colorOnSurface">@color/textPrimaryBlue</item>

        <item name="android:textColorPrimary">@color/textPrimaryBlue</item>
        <item name="android:textColorSecondary">@color/textSecondaryBlue</item>
    </style>

        <style name="Theme.Transparent" parent="android:Theme">
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:backgroundDimEnabled">false</item>
        </style>
</resources>
